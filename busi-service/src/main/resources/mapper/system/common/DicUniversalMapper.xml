<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzxc.busi.dao.DicUniversalMapper">
    
    <resultMap type="DicUniversal" id="DicUniversalResult">
        <result property="id"    column="id"    />
        <result property="dicValue"    column="dic_value"    />
        <result property="weight"    column="weight"    />
        <result property="dicKey"    column="dic_key"    />
        <result property="type"    column="type"    />
    </resultMap>

    <sql id="selectDicUniversalVo">
        select a.id, a.dic_value, a.weight, a.dic_key, a.type from dic_universal as a
    </sql>

    <select id="selectDicUniversalList" parameterType="DicUniversal" resultMap="DicUniversalResult">
        <include refid="selectDicUniversalVo"/>
        <where>  
            <if test="id != null "> and a.id = #{id}</if>
            <if test="dicValue != null  and dicValue != ''"> and a.dic_value = #{dicValue}</if>
            <if test="weight != null "> and a.weight = #{weight}</if>
            <if test="dicKey != null  and dicKey != ''"> and a.dic_key = #{dicKey}</if>
            <if test="type != null  and type != ''"> and a.type = #{type}</if>
        </where>
    </select>
        
    <insert id="insertDicUniversal" parameterType="DicUniversal" useGeneratedKeys="true" keyProperty="id">
        insert into dic_universal
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dicValue != null and dicValue != ''">dic_value,</if>
            <if test="weight != null">weight,</if>
            <if test="dicKey != null and dicKey != ''">dic_key,</if>
            <if test="type != null and type != ''">type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="dicValue != null and dicValue != ''">#{dicValue},</if>
            <if test="weight != null">#{weight},</if>
            <if test="dicKey != null and dicKey != ''">#{dicKey},</if>
            <if test="type != null and type != ''">#{type},</if>
         </trim>
    </insert>

    <update id="updateDicUniversal" parameterType="DicUniversal">
        update dic_universal a
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">a.id = #{id},</if>
            <if test="dicValue != null and dicValue != ''">a.dic_value = #{dicValue},</if>
            <if test="weight != null">a.weight = #{weight},</if>
            <if test="dicKey != null and dicKey != ''">a.dic_key = #{dicKey},</if>
        </trim>
        where a.id = #{id} and a.type = 'youth-league'
    </update>

</mapper>