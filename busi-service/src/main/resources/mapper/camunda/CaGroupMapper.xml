<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzxc.camunda.dao.CaGroupMapper">

    <resultMap type="CaGroup" id="CaGroupResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectCaGroupVo">
        select id, name, create_time from dsjkb_test.ca_group
    </sql>

    <select id="selectCaGroupList" parameterType="CaGroup" resultMap="CaGroupResult">
        <include refid="selectCaGroupVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="name != null  and name != ''">and name = #{name}</if>
        </where>
    </select>

    <select id="findAllByUserId" resultMap="CaGroupResult">
        select * from
        (
        <include refid="selectCaGroupVo"/>
        ${ew.customSqlSegment}) a
        inner join dsjkb_test.ca_group_member b on a.id = b.group_id and b.user_id = #{userId}
    </select>

    <insert id="insertCaGroup" parameterType="CaGroup" useGeneratedKeys="true" keyProperty="id">
        insert into dajkb_test.ca_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
        </trim>
    </insert>

    <update id="updateCaGroup" parameterType="CaGroup">
        update dajkb_test.ca_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null">id = #{id},</if>
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

</mapper>