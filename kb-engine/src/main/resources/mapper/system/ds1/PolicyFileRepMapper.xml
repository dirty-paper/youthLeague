<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzxc.kbengine.dao.ds1.PolicyFileRepMapper">
    
    <resultMap type="com.wzxc.kbengine.vo.PolicyFileRep" id="PolicyFileRepResult">
        <result property="id"    column="id"    />
        <result property="fileOutId"    column="file_out_id"    />
        <result property="fileName"    column="file_name"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="createTime"    column="create_time"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectPolicyFileRepVo">
        select id, file_out_id, file_name, file_url, create_time, status from policy_file_rep
    </sql>

    <select id="selectPolicyFileRepList" parameterType="PolicyFileRep" resultMap="PolicyFileRepResult">
        <include refid="selectPolicyFileRepVo"/>
        <where>  
            <if test="fileOutId != null "> and file_out_id = #{fileOutId}</if>
            <if test="fileName != null  and fileName != ''"> and file_name like concat('%', #{fileName}, '%')</if>
            <if test="fileUrl != null  and fileUrl != ''"> and file_url = #{fileUrl}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectPolicyFileRepById" parameterType="Long" resultMap="PolicyFileRepResult">
        <include refid="selectPolicyFileRepVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPolicyFileRep" parameterType="PolicyFileRep" useGeneratedKeys="true" keyProperty="id">
        insert into policy_file_rep
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileOutId != null">file_out_id,</if>
            <if test="fileName != null">file_name,</if>
            <if test="fileUrl != null">file_url,</if>
            <if test="createTime != null">create_time,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fileOutId != null">#{fileOutId},</if>
            <if test="fileName != null">#{fileName},</if>
            <if test="fileUrl != null">#{fileUrl},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <!--  政策附件批导入  -->
    <insert id="insertBatch">
        INSERT INTO policy_file_rep(file_name, file_url, file_out_id)
        VALUES
        <foreach collection ="policyFileRepList" index="index" item="item" separator =",">
                (#{item.fileName}, #{item.fileUrl}, #{item.fileOutId})
        </foreach>
    </insert>

    <update id="updatePolicyFileRep" parameterType="PolicyFileRep">
        update policy_file_rep
        <trim prefix="SET" suffixOverrides=",">
            <if test="fileOutId != null">file_out_id = #{fileOutId},</if>
            <if test="fileName != null">file_name = #{fileName},</if>
            <if test="fileUrl != null">file_url = #{fileUrl},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePolicyFileRepById" parameterType="Long">
        delete from policy_file_rep where id = #{id}
    </delete>

    <delete id="deletePolicyFileRepByIds" parameterType="String">
        delete from policy_file_rep where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>