<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzxc.camunda.dao.CaUserMapper">

    <resultMap type="CaUser" id="CaUserResult">
        <result property="id" column="employee_code"/>
        <result property="firstname" column="employee_name"/>
        <result property="lastname" column="employee_name"/>
    </resultMap>

    <sql id="selectCaUserVo">
        select employee_code, employee_name from dsjkb_test.sys_employee
    </sql>

    <select id="findAll" resultMap="CaUserResult">
        <include refid="selectCaUserVo"/>
        ${ew.customSqlSegment}
    </select>

    <select id="findByGroupId" resultMap="CaUserResult">
        SELECT b.employee_code, b.employee_name
        FROM (SELECT user_id FROM dsjkb_test.ca_group_member WHERE group_id = #{groupId}) a
        LEFT JOIN (
        <include refid="selectCaUserVo"/>
        ${ew.customSqlSegment}) b ON a.user_id = b.employee_code
    </select>

    <select id="aggragate" resultType="java.lang.Long">
        select count(1) from dsjkb_test.sys_employee
    </select>


</mapper>